		Дата1С = дт;
	Иначе		
		//Дата1С = Дата(Сред(дт,0,4)+Сред(дт,6,2)+Сред(дт,9,2)+Сред(дт,12,2)+Сред(дт,15,2)+Сред(дт,18,2));
		//"3.10.2023 13:2:55"
