	КонецЕсли;
	Если ТЗБрони.Количество() > 0 Тогда 
		БрониПоЗаказу = ТЗБрони.НайтиСтроки(Новый Структура("IDзаказа", идЗаказа));
		
		СтатусТовара = "";
		
