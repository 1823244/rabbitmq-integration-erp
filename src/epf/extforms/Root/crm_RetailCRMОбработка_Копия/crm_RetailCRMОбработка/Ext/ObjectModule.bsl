	искХарактеристика = Справочники.ХарактеристикиНоменклатуры.ПустаяСсылка();
	Если crm_RetailCRMПовтИсп.ПолучитьЗначениеКонстанты("GUIDОрганизации") = Истина Тогда 
		GUIDОрганизации = Истина;
	Иначе 
